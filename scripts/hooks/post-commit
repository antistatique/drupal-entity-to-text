echo "\nüöî  \033[0;32mRunning Code Sniffer Drupal & DrupalPractice for ./web/modules/contrib/entity_to_text/ ...\033[0m"
docker-compose exec drupal ./vendor/bin/phpcs ./web/modules/contrib/entity_to_text/

echo "\nüí©  \033[0;32mRunning PHP Mess Detector ...\033[0m"
docker-compose exec drupal phpmd ./web/modules/contrib/entity_to_text/ text ./phpmd.xml --suffixes php,module,inc,install,test,profile,theme,css,info,txt --exclude *Test.php,*vendor/*

echo "\nüõÇ  \033[0;32mRunning PHP Copy/Paste Detector ...\033[0m"
docker-compose exec drupal phpcpd ./web/modules/contrib/entity_to_text/src --suffix .php --suffix .module --suffix .inc --suffix .install --suffix .test --suffix .profile --suffix .theme --suffix .css --suffix .info --suffix .txt --exclude *.md --exclude *.info.yml --exclude tests --exclude vendor/

echo "\nüç´  \033[0;32mRunning PhpDeprecationDetector ...\033[0m"
docker-compose exec drupal phpdd ./web/modules/contrib/entity_to_text/ --file-extensions php,module,inc,install,test,profile,theme,info --exclude vendor

echo "\nüí¶  \033[0;32mRunning Drupal-Check ...\033[0m"
docker-compose exec drupal drupal-check -d ./web/modules/contrib/entity_to_text/ --exclude-dir=vendor --no-progress
